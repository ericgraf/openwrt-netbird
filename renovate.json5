{

  "extends": [
    "config:recommended" // https://docs.renovatebot.com/presets-config/#configrecommended
  ],
  
 "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Makefile"
      ],
      "matchStrings": [
        "repo: (?<depName>.*)\n(.+)PKG_VERSION:=v?(?<currentValue>.+)\\/.*"
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^\"?v?(?<version>.*)\"?$"
    }
}